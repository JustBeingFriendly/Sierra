<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/secondarybg"
    tools:context="com.example.benjamin.sierra.QueuePage">

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="@string/YesCancelQueue"
        android:id="@+id/btnCancelQueueYes"
        android:background="@drawable/drinkbg"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/queue_select" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/drink_cancel"
        android:id="@+id/txtLvSelect"
        android:layout_above="@+id/btnCancelQueueYes"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/queue_welcome"
        android:id="@+id/queue_welcome"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/queue_select"
        android:id="@+id/queue_select"
        android:layout_below="@+id/queue_welcome"
        android:layout_centerHorizontal="true" />

    <ListView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvQueue"

        android:layout_below="@+id/queue_select"
        android:layout_above="@+id/txtLvSelect"
        android:choiceMode="singleChoice"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:headerDividersEnabled="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="@string/NoCancelQueue"
        android:id="@+id/btnCancelQueueNo"
        android:background="@drawable/drinkbg"
        android:layout_alignTop="@+id/btnCancelQueueYes"
        android:layout_alignEnd="@+id/queue_select" />

</RelativeLayout>
